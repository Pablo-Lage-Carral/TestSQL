-- TABELA PEDIDO
CREATE TABLE tb_pedido(
id_pedido INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL,
id_mesa INTEGER,
id_produto INTEGER NOT NULL,
qtde NUMBER NOT NULL,
horario DATE NOT NULL
);

-- correto (0,2)
ALTER TABLE tb_pedido
ADD
CONSTRAINT pk_id_pedido
PRIMARY KEY(id_pedido);

-- correto (0,2)
ALTER TABLE tb_pedido
ADD
CONSTRAINT fk_id_mesa
FOREIGN KEY (id_mesa)
REFERENCES tb_mesa(id_mesa);

-- correto (0,2)
ALTER TABLE tb_pedido
ADD
CONSTRAINT fk_id_produto
FOREIGN KEY (id_produto)
REFERENCES tb_produto(id_produto);

-- correto (0,3)
--INDEX PEDIDO MESA
CREATE INDEX idx_ped_mesa
ON tb_pedido(id_mesa);

