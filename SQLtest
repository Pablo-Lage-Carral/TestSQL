-- correto (0,6)
CREATE TABLE tb_promocao(
id_promocao INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL,
nome VARCHAR(255),
dt_inicio DATE,
dt_termino DATE,
desconto NUMBER(10,2) NOT NULL
);
select * from tb_promocao;

-- correto (0,2)
--CHAVE PRIMARIA
ALTER TABLE tb_promocao
ADD
CONSTRAINT pk_id_promocao
PRIMARY KEY(id_promocao);

-- correto (0,3)
--INDEX PROMO DESC
CREATE INDEX idx_promo_desc
ON tb_promocao(desconto);

-- correto (0,6)
--TABELA PRODU PROMO
CREATE TABLE tb_produ_promo(
id_prod_prom INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL,
id_promocao INTEGER NOT NULL,
id_produto INTEGER NOT NULL
);
select * from tb_produ_promo;

-- correto (0,2)
--pk id prod prom
ALTER TABLE tb_produ_promo
add
constraint pk_prod_prom
primary key(id_prod_prom);

-- correto (0,2)
-- fk id promocao
ALTER TABLE tb_produ_promo
add
constraint fk_id_promocao
FOREIGN KEY(id_promocao)
REFERENCES tb_promocao(id_promocao);

-- correto (0,2)
--fk id produto
ALTER TABLE tb_produto
add
constraint fk_id_produto_promocao
FOREIGN KEY(id_produto)
REFERENCES tb_produto(id_produto);
