--TABELA MESA
CREATE TABLE tb_mesa(
id_mesa INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL,
setor VARCHAR2(2) NOT NULL
);

-- correto (0,2)
ALTER TABLE tb_mesa
ADD
CONSTRAINT pk_id_mesa
PRIMARY KEY(id_mesa);

select * from tb_mesa;

-- correto (0,4)
ALTER TABLE tb_mesa
add
CONSTRAINT ck_setor
CHECK(setor IN('FE','FU','ME','LD','LE'));

